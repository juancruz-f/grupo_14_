<!DOCTYPE html>
<html lang="es">

<!-- Head -->
<%- include('./partials/head') %>


  <body>
    <!-- Header -->
    <%- include('./partials/header') %>

      <div class="container-fluid">

        <ul class="slider">
          <li id="slide1">
            <img src="/images/carousel-1.jpg" alt="">


          </li>
          <li id="slide2">
            <img src="/images/carousel-2.jpg" alt="">

          </li>
          <li id="slide3">
            <img src="/images/carousel-3.jpg" alt="">

          </li>
        </ul>

        <ul class="menu">
          <li>
            <a href="#slide1"></a>
          </li>
          <li>
            <a href="#slide2"></a>
          </li>
          <li>
            <a href="#slide3"></a>
          </li>
        </ul>

      </div>
      <main id="primero" class="destacados">

        <h1>Destacados</h1>
        <section class="contenedor">

          <% products.forEach(product=>{%>

            <article>
              <img src="/images/<%= product.image %> " alt="">
              <h4>
                <%= product.title %>
              </h4>
              <p>
                <%= product.price %>
              </p>
              <button class="articulo"><a href="/products/detail/<%= product.id %> ">Más info</a></button>
            </article>
            <% }) %>

        </section>

        <h1>Tambien puede interesarte</h1>
