<!-- Head -->
<%- include('./partials/head') %> 

<body class="body--login">
  
    <!-- Header -->
  <%- include('./partials/header') %> 
  
  <div class="container-fluid">

    <ul class="slider">
      <li id="slide1">
        <img src="/images/carousel-1.jpg" alt="">


      </li>
      <li id="slide2">
        <img src="/images/carousel-2.jpg" alt="">

      </li>
      <li id="slide3">
        <img src="/images/carousel-3.jpg" alt="">

      </li>
    </ul>

    <ul class="menu">
      <li>
        <a href="#slide1"></a>
      </li>
      <li>
        <a href="#slide2"></a>
      </li>
      <li>
        <a href="#slide3"></a>
      </li>
    </ul>

  </div>
  <main>

     <div class="cont--login">
      <div class="cont--loginInt">

        <form  class="form" action="" method="POST">
          <h5 class="h5--login">INICIAR SESIÓN</h5>
          <div class="form-field d-flex flex-column">
            <input  for="exampleInputEmail1" type="email" id="mail" name="email" placeholder="  EMAIL" >
          </div>
         
         
          <div class="form-field d-flex flex-column">
            <input  for="exampleInputPassword1" type="password" id="contrasenia" name="password" placeholder=" CONTRASEÑA" >
          </div>
         
          <div class="d-flex justify-content-end">
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="recordar">
                <label class="form-check-label" for="exampleCheck1">Recordarme</label>
              </div>
        </div>
          <button class="button--login" type="submit"> INGRESAR </button>
          <span class="text-danger"><%= locals.errores && errores.email ? errores.email.msg : null%> </span>
          <a class="resgistrarse--login" href="/users/register">REGISTRARSE</a>
          <a class="a--login" href="/">¿Olvidaste tu contraseña?</a>
        </form>
      </div>
    </div>
    
     
    
 
    
    <section class="newsletter--Caja">
      <div class="newsletter--login">

        <h4 class="h4--login">NEWSLETTER</h4>
        <p class="p--login">dejanos tu email para poder enterarte de nuestras novedades y promos</p>
        <div class="div--login">
          <div class="divCjta-login">
            <input class="input--email" type="email" name="email" placeholder="  Ingresa tu e-mail">
            <button class="button--newsletter" type="submit">Enviar</button>
          </div>

        </div>
      </div>
    </section>


  </main>
  <!-- Footer -->

  <%- include('./partials/footer') %> 

